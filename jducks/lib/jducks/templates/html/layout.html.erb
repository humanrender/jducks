<%
  conf = JDucks::Core::Conf.instance
%><!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <meta name="apple-mobile-web-app-capable" content="yes">
    
    <title><%= conf.project_name %> | <%= complete_resource_name %></title>
    
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:700,400,300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="<%= relative_path_for "stylesheets/all.css" %>">
    <link rel="stylesheet" type="text/css" href="<%= relative_path_for "stylesheets/dependencies/highlight_solarized_light.css" %>">
    
  </head>
  <body>   
    <%= render "partials/resources_nav", :locals=>{:resources=>parsed_items} %>
    <div role="main">
      <%=   render "partials/header", :locals=>{
        :project_name=>conf.project_name,
        :project_description=>conf.project_description
      } %>
      <%= yield %>
    </div>
    <script src="<%= relative_path_for "javascripts/all.js" %>"></script>
    <script src="<%= relative_path_for "javascripts/development.js" %>"></script>
  </body>
</html>